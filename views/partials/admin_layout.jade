html
  head(lang='en')
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='/css/bootstrap/bootstrap.min.css', rel='stylesheet', media='screen')
    style(type='text/css').
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
      @media (max-width: 980px) {
        /* Enable use of floated navbar text */
        .navbar-text.pull-right {
          float: none;
          padding-left: 5px;
          padding-right: 5px;
        }
      }
    link(href='/css/bootstrap/bootstrap-responsive.css', rel='stylesheet')
    title
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#') 6in4
          .nav-collapse.collapse
            ul.nav
              li.active
                a(href='#') 首页
              li(ng-show="isAuthorized(USER_ROLES.admin)")
                a(href='#about') 资源审核
              li(ng-show="isAuthorized(USER_ROLES.admin)")
                a(href='#contact') 用户日志
            ul.nav.pull-right
              li
                a(href='') 欢迎,{{user.userName}}
    .container-fluid
      .row-fluid
        .span2.well(style='padding: 8px 0;')
          ul.nav.nav-list
            li.nav-header(ng-show="checkMenuVisible('check_site_title')") 站点审核
            li(ng-class="{'active': checkSelection('check_site_undo')}", ng-show="checkMenuVisible('check_site_undo')")
              a(href='#check/site/undo/1') 未审核
            li(ng-class="{'active': checkSelection('check_site_done')}", ng-show="checkMenuVisible('check_site_done')")
              a(href='#check/site/done/1') 已审核

            li.nav-header(ng-show="checkMenuVisible('check_app_title')") 应用审核
            li(ng-class="{'active': checkSelection('check_app_undo')}", ng-show="checkMenuVisible('check_app_undo')")
              a(href='#check/app/undo/1') 未审核
            li(ng-class="{'active': checkSelection('check_app_done')}", ng-show="checkMenuVisible('check_app_done')")
              a(href='#check/app/done/1') 已审核

            li.nav-header(ng-show="checkMenuVisible('site_title')") 站点资源
            li(ng-class="{'active': checkSelection('create_site')}", ng-show="checkMenuVisible('create_site')")
              a(href='#res/site/create') 提交站点
            li(ng-class="{'active': checkSelection('my_sites')}", ng-show="checkMenuVisible('my_sites')")
              a(href='#res/site/list/1') 我的站点

            li.nav-header(ng-show="checkMenuVisible('app_title')") APP资源
            li(ng-class="{'active': checkSelection('create_app')}", ng-show="checkMenuVisible('create_app')")
              a(href='#res/app/create') 提交APP
            li(ng-class="{'active': checkSelection('my_apps')}", ng-show="checkMenuVisible('my_apps')")
              a(href='#res/app/list/1') 我的APP

            li.divider
            li
              a(href='', ng-click='logout()') 退出
